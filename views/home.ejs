<link rel="stylesheet" href="/css/home.css">
<div id="home-content">
    <section id="feed-posts">
    
        <%if(locals.user){%>
            
            <div id="post-form">
                <form action="/posts/add-post" id="new-post-form" method="POST">
                    <textarea name="content" cols="30" rows="3" placeholder="Type Here .." required></textarea>
                    <input type="submit" value="POST">
                </form>
            </div>
            <h4>Posts</h4>
            <div id="posts-list">
                <ul>
                    <%for (i of posts){%>
                        <%- include('_post'); %>
                    <%}%>
                </ul>
            </div>
        <%}%>
    
        
    
    </section>
    <section id="friends-list">
        <%- include('friends'); %> 
    </section>
</div>
<script src="/js/home_posts_comment.js" ></script>
<script src="/js/home_posts.js">
</script>

       