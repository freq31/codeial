<comments class="post-comments"> 
    <%if(locals.user){%>
        <form action="/comments/add-comments" id="post-<%= i._id %>-comments-form" method="POST">
            <input type="text" name="content" placeholder="add comment" required>
            <input type="hidden" name="post" value="<%=i._id%>">
            <input type="submit" value="Comment">
        </form>
        <div class="post-comments-list">
            <ul id="post-comments-<%= i._id%>">
                <%for (let j of i.comments){%>
                    <li id="comment-<%=j._id%>">
                        <%if(locals.user && locals.user.id==j.user.id){%>
                            <small>
                                <a class="delete-comment-button" href="/comments/destroy/<%=j.id%>">del</a>
                            </small>
                        <%}%>
                        <%=j.content%>
                        <name>
                            <%=j.user.name%>
                        </name>
                        
                    </li>
                    
                <%}%>
            </ul>
        </div>
    <%}%>

</comments>